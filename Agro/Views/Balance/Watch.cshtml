@model BalanceViewModel
@{
    ViewData["Title"] = "Весы";
}

<div class="container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-7">
            <div class="mb-4">
                <h3>Весы</h3>
            </div>
            <form asp-action="Watch" asp-controller="Balance">
                <div class="form-group">
                    @Html.LabelFor(m=>m.Code, "Код")
                    @Html.TextBoxFor(m=>m.Code, null, new { @class="form-control", @readonly="readonly" })
                    @Html.ValidationMessageFor(m=>m.Code)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.Name, "Название")
                    @Html.TextBoxFor(m=>m.Name, null, new { @class="form-control", @readonly="readonly" })
                    @Html.ValidationMessageFor(m=>m.Name)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.AreaId, "Участок")
                    @Html.DropDownListFor(m=>m.AreaId, new SelectList(ViewBag.Areas, "Id", "Name"),
                    new { @class="form-select", @disabled="disabled" })
                    @Html.ValidationMessageFor(m=>m.AreaId)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.MinWeight, "Минимальный вес, кг")
                    @Html.TextBoxFor(m=>m.MinWeight, null, new { @class="form-control", @readonly="readonly" })
                    @Html.ValidationMessageFor(m=>m.MinWeight)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.MaxWeight, "Максимальный вес, кг")
                    @Html.TextBoxFor(m=>m.MaxWeight, null, new { @class="form-control", @readonly="readonly" })
                    @Html.ValidationMessageFor(m=>m.MaxWeight)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.WeighTolerance, "Погрешность дозирования, кг")
                    @Html.TextBoxFor(m=>m.WeighTolerance, null, new { @class="form-control", @readonly="readonly" })
                    @Html.ValidationMessageFor(m=>m.WeighTolerance)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.EmptyTolerance, "Погрешность опустошения, кг")
                    @Html.TextBoxFor(m=>m.EmptyTolerance, null, new { @class="form-control", @readonly="readonly" })
                    @Html.ValidationMessageFor(m=>m.EmptyTolerance)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.MaxDosingTime, "Максимальное время дозирования, с")
                    @Html.TextBoxFor(m=>m.MaxDosingTime, null, new { @class="form-control", @readonly="readonly" })
                    @Html.ValidationMessageFor(m=>m.MaxDosingTime)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.Comment, "Комментарий")
                    @Html.TextAreaFor(m=>m.Comment, 3, 1, new { @class="form-control", @readonly="readonly" })
                    @Html.ValidationMessageFor(m=>m.Comment)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.LastChange, "Последнее изменение")
                    @Html.TextBoxFor(m=>m.LastChange, null, new { @class="form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(m=>m.LastChange)
                </div>
            </form>
        </div>
    </div>
</div>
