@model RecipeIngredientViewModel
@{
    ViewData["Title"] = "Добавить ингредиент";
}

<div class="container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-7">
            <div class="mb-4">
                <h3>Добавить ингредиент</h3>
            </div>
            <form asp-action="Create" asp-controller="RecipeIngredient">
                <div class="form-group" hidden="hidden">
                    @Html.LabelFor(m=>m.ProductRecipeId, "Рецепт")
                    @Html.TextBoxFor(m=>m.ProductRecipeId, null, new { @class="form-control" })
                    @Html.ValidationMessageFor(m=>m.ProductRecipeId)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.ResourceId, "Сырье")
                    @Html.DropDownListFor(m=>m.ResourceId, new SelectList(ViewBag.Resources, "Id", "Name"),
                    new { @class="form-select" })
                    @Html.ValidationMessageFor(m=>m.ResourceId)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.ResourceContent, "Содержание, %")
                    @Html.TextBoxFor(m=>m.ResourceContent, null, new { @class="form-control" })
                    @Html.ValidationMessageFor(m=>m.ResourceContent)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.DosingPriority, "Приоритет")
                    @Html.TextBoxFor(m=>m.DosingPriority,null, new { @class="form-control" })
                    @Html.ValidationMessageFor(m=>m.DosingPriority)
                </div>
                <button type="submit" class="btn btn-block btn-primary">Добавить</button>
            </form>
        </div>
    </div>
</div>
