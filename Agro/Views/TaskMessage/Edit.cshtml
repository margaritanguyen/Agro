@model TaskMessageViewModel
@{
    ViewData["Title"] = "Изменить сообщение заданий";
}

<div class="container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-7">
            <div class="mb-4">
                <h3>Изменить сообщение заданий</h3>
            </div>
            <form asp-action="Edit" asp-controller="TaskMessage">
                <div class="form-group">
                    @Html.LabelFor(m=>m.Code, "Код")
                    @Html.TextBoxFor(m=>m.Code, null, new { @class="form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(m=>m.Code)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.Message, "Сообщение")
                    @Html.TextBoxFor(m=>m.Message, null, new { @class="form-control" })
                    @Html.ValidationMessageFor(m=>m.Message)
                </div>
                <button type="submit" class="btn btn-block btn-primary">Сохранить</button>
            </form>
        </div>
    </div>
</div>
