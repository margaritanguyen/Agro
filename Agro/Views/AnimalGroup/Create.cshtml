@model AnimalGroupViewModel
@{
    ViewData["Title"] = "Добавить группу животных";
}

<div class="container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-7">
            <div class="mb-4">
                <h3>Добавить группу животных</h3>
            </div>
            <form asp-action="Create" asp-controller="AnimalGroup">
                <div class="form-group">
                    @Html.LabelFor(m=>m.Code, "Код")
                    @Html.TextBoxFor(m=>m.Code, null, new { @class="form-control" })
                    @Html.ValidationMessageFor(m=>m.Code)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.Name, "Наименование")
                    @Html.TextBoxFor(m=>m.Name, null, new { @class="form-control" })
                    @Html.ValidationMessageFor(m=>m.Name)
                </div>
                <button type="submit" class="btn btn-block btn-primary">Добавить</button>
            </form>
        </div>
    </div>
</div>
